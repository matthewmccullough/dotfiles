# Haskell
export PATH=$PATH:~/.cabal/bin

# Git Tools
PATH=$PATH:/Applications/Dev/jgit

# Node JS Packages (from Brew Install of Node and NPM)
PATH=$PATH:/usr/local/share/npm/bin

