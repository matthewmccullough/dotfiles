########################################################################
# Shell agnostic path setup
########################################################################

# Matthew's Scripts
export PATH=$PATH:.
export PATH=$PATH:~/bin
export PATH=$PATH:~/.dotfiles/scripts

# Brew
export PATH=/opt/boxen/homebrew/sbin:$PATH
#export PATH=/opt/boxen/homebrew/bin:$PATH

# MacPorts
## Having MacPorts first instead of after $PATH causes a GitK error
## http://stackoverflow.com/questions/2629292/starting-gitk-error
export PATH=$PATH:/opt/local/bin
export PATH=$PATH:/opt/local/sbin
export MANPATH=$MANPATH:/opt/local/share/man

